<h1>Listing flights</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Time</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Altitude</th>
    <th>Groundspeed</th>
    <th>Heading</th>
    <th>Air temp</th>
    <th>Air density</th>
    <th>Pressure</th>
	<th>Import ID</th>
  </tr>

<% @flights.each do |flight| %>
  <tr>
    <td><%=h flight.title %></td>
    <td><%=h flight.time %></td>
    <td><%=h flight.latitude %></td>
    <td><%=h flight.longitude %></td>
    <td><%=h flight.altitude %></td>
    <td><%=h flight.groundspeed %></td>
    <td><%=h flight.heading %></td>
    <td><%=h flight.air_temp %></td>
    <td><%=h flight.air_density %></td>
    <td><%=h flight.pressure %></td>
	<td><%=h flight.import_id %></td>
    <td><%= link_to 'Show', flight %></td>
    <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
    <td><%= link_to 'Destroy', flight, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New flight', new_flight_path %>